<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gpms.dao.mapper.NoticeMapper">

    <select id="getNoticesByUserId" resultType="com.gpms.dao.domain.entity.Notice">
        select n.*
        from notice n
        left join private_notice p on p.owner = n.id
        where receiver = #{userId} or receiver is null;
    </select>
</mapper>